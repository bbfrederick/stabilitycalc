#!/usr/bin/env python

"""legacy thing for scripts to read paths from the config.json file"""

import sys
import json
import logging

if len(sys.argv) != 2:
    logging.critical('usage: stabilityparms key')
    exit(1)
key = sys.argv[1]

try:
    paths = json.load(open('config/config.json'))['paths']
    print (paths.get(key.lower(), ''))
except IOError:
    logging.critical('Failed to open configuration file.')
except KeyError:
    logging.critical('Path section not found in configuration file.')
